<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                >

                <!-- 2 columns -->

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:padding="6dp">

                    <ImageButton
                        android:src="@drawable/home"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton_main_menu_home"


                        android:layout_weight="1" />

                    <ImageButton
                        android:src="@drawable/procurement"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton_main_menu_voyage"

                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"

                    >
                    <ImageButton
                        android:src="@drawable/image_waste"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton_main_menu_rekusisi"


                        android:layout_weight="1" />
                    <ImageButton
                        android:src="@drawable/image_meals"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton_main_menu_waste"

                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"

                    >

                    <ImageButton
                        android:src="@drawable/inventory"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton_main_menu_inventory"
                        android:layout_span="1"

                        android:layout_weight="1" />
                    <ImageButton
                        android:src="@drawable/people"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton_main_menu_people"
                        android:layout_span="1"

                        android:layout_weight="1" />
                </TableRow>




            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
